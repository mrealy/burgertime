<h1>Update the burger with an id of {{this.id}}</h1>

<form class="create-update-form" action="/{{this.id}}?_method=PUT" method="POST">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="burger_name" value="{{this.burger_name}}">
  </div>
  
  <button type="submit">Update Burger</button>
</form>
